html
  head
    title NSEcom Search results
    style.
      #navcontainer ul
      {
      align:center;
      margin: 0;
      padding: 0;
      list-style-type: none;
      text-align: center;
      }
      #navcontainer ul li { display: inline; }
      #navcontainer ul li a
      {
      text-decoration: none;
      padding: .2em 1em;
      color: #fff;
      background-color: #5B88C0;
      }
      #navcontainer ul li a:hover
      {
      color: #fff;
      background-color: #B75A00;
      }
  body(bgcolor='#E6E6FA', leftmargin='0', topmargin='0', marginwidth='0', marginheight='0')
    form(name='frmMain1', method='get', action='searchProduct')
      table(border='0', width='100%')
        tr
          td
            table(border='0', width='60%', align='center')
              tr
                br
                td(width='40%', align='right')
                  img(src='../images/nsecomlogo.png')
                td(width='20%')
                  input(type='text', style='font-size:16px;', name='keyword')
                td(width='40%')
                  input(type='submit', value='search')
        tr
          td
            table(border='0', width='60%', align='center')
              tr
                td(align='center')
                  #navcontainer(align='center')
                    ul
                      li
                        a(href='#')       Gift Shop      
                      li
                        a(href='#')       Women
                      li
                        a(href='#')       Men      
                      li
                        a(href='#')       Shoes      
                      li
                        a(href='#')       Home Accents      
                      li
                        a(href='#')    New Items   
        tr
          td
            table(border='0', width='50%', align='center')
             each prod in products
                tr
                  td(align='center')
                    a(href='/nsecomm/productPage?productid=#{prod.prodId}&upc=#{prod.upc}&prodImage=#{prod.image}&prodPrice=#{prod.price}')
                      img(src='../images/#{prod.image}', width='150', height='160')
                tr
                  td(align='center') #{prod.description}
                tr
                  td(align='center')  US $#{prod.price}

